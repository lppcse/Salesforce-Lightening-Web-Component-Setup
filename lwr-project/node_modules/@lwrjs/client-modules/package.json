{
    "name": "@lwrjs/client-modules",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.10.6",
    "homepage": "https://developer.salesforce.com/docs/platform/lwr/overview",
    "repository": {
        "type": "git",
        "url": "https://github.com/salesforce-experience-platform-emu/lwr/lwr.git",
        "directory": "packages/@lwrjs/client-modules"
    },
    "bugs": {
        "url": "https://github.com/salesforce-experience-platform-emu/lwr/lwr/issues"
    },
    "type": "module",
    "types": "build/es/index.d.ts",
    "main": "build/es/index.js",
    "module": "build/es/index.js",
    "exports": {
        ".": "./build/es/index.js"
    },
    "files": [
        "build/**/*.js",
        "build/**/*.d.ts"
    ],
    "scripts": {
        "build:ts": "tsc -b",
        "build": "yarn build:ts && node ../../../bin/pack-lwc --dir modules build/modules && yarn build:locker && yarn build:bundle",
        "build:locker": "rollup --config ./scripts/rollup.config.locker.js",
        "build:bundle": "rollup --config scripts/rollup.moduleBundle.config.cjs",
        "build:platform": "node scripts/strip-for-core.js"
    },
    "dependencies": {
        "@locker/sandbox": "0.19.15",
        "@lwrjs/shared-utils": "0.10.6"
    },
    "devDependencies": {
        "@lwrjs/types": "0.10.6",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "@rollup/plugin-sucrase": "^5.0.1",
        "@rollup/plugin-terser": "^0.4.3",
        "fs-extra": "^11.1.1",
        "rollup": "^2.78.0"
    },
    "lwc": {
        "modules": [
            {
                "dir": "build/modules"
            }
        ],
        "expose": [
            "lwr/declarativeShadow",
            "lwr/environment",
            "lwr/hmr",
            "lwr/preInit",
            "lwr/init",
            "lwr/servicesESM",
            "lwr/lockerDefine",
            "lwr/lockerSandbox",
            "lwr/metrics",
            "lwr/profiler"
        ]
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "volta": {
        "extends": "../../../package.json"
    },
    "gitHead": "42f3a600fb905d294fe68de47c280df14ee361e4"
}
